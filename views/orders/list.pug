extends ../partials/dashboard-layout

block content
    div(class="main p-3")
        div(class="w-full h-full flex flex-col items-center px-14 mt-6")
            div(class="w-full divide-y divide-gray-200 border rounded-lg overflow-hidden shadow-md")
                div(class="flex items-center justify-between py-4 px-6")
                    h1(class="text-lg font-semibold text-gray-800") Orders

                table(class="min-w-full divide-y divide-gray-200")
                    thead(class="bg-gray-100")
                        tr
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") ID
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") Customer
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") Email
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") Total
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider text-center") Status
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") Created At
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") Updated At
                    tbody(class="bg-white divide-y divide-gray-200")
                        if data && data.length
                            each order in data
                                tr  
                                    td(class="py-5 px-6 text-sm text-gray-500")= order.id
                                    td(class="py-5 px-6 text-sm text-gray-500")= order.user.name
                                    td(class="py-5 px-6 text-sm text-gray-500")= order.user.email
                                    td(class="py-5 px-6 text-sm text-gray-500")= order.totalPrice
                                    td(class="text-center")    
                                        - var statusColor = order.status === 'pending' ? '#5925DC' : order.status === 'processing' ? '#B54708' : order.status === 'completed' ? '#067647' : order.status === 'cancelled' ? '#C11574' : 'gray'
                                        span(class=`block w-full py-1.5 px-4 bg-[${statusColor}] bg-opacity-10 border border-[${statusColor}] border-opacity-20 rounded-full text-[${statusColor}] text-sm capitalize`)= order.status
                                    td(class="py-5 px-6 text-sm text-gray-500")= order.createdAt
                                    td(class="py-5 px-6 text-sm text-gray-500")= order.updatedAt   

                        else
                            tr
                                td(class="py-4 px-6 text-sm text-gray-500 text-center" colspan=columns.length) There aren't any records to display.


                div(class="py-4 px-6")
                    include ../partials/pagination.pug