extends ../layout

block content
    div(class="main p-3")
        div(class="w-full h-full flex flex-col items-center")
            div(class="w-full px-20")
                table(class="min-w-full divide-y divide-gray-200 border")
                    thead(class="bg-gray-50")
                        tr
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") ID
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") Slug
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") Name
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") Created At
                            th(class="py-3 px-6 text-left text-xs font-medium text-gray-500 tracking-wider") Updated At
                    tbody(class="bg-white.divide-y.divide-gray-200")
                        if data.length
                            each author in data
                                tr
                                    td(class="py-4 px-6 text-sm font-medium.text-gray-900")= author.id
                                    td(class="py-4 px-6 text-sm text-gray-500")= author.slug
                                    td(class="py-4 px-6 text-sm text-gray-500")= author.name
                                    td(class="py-4 px-6 text-sm text-gray-500")= author.createdAt
                                    td(class="py-4 px-6 text-sm text-gray-500")= author.updatedAt
                        else
                            tr
                                td(class="py-4 px-6 text-sm text-gray-500 text-center" colspan="5") No authors found



