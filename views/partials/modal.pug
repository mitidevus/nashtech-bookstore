div(id="modal-overlay" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden")
    div(id="modal" class="relative bg-white rounded-xl p-6 min-w-[400px] max-w-[600px]")
        div(class="absolute top-0 right-0 cursor-pointer p-2 m-2" onclick="closeModal()")
            i.lni.lni-close

        h1(class="text-lg font-semibold text-gray-700 mb-4")= modalTitle

        div
            block modalFormContent

script.
    function openModal() {
        const modal = document.getElementById('modal-overlay');
        modal.classList.remove('hidden');
    }

    function closeModal() {
        const modalOverlay = document.getElementById('modal-overlay');
        modalOverlay.classList.add('hidden');
    }

    document.addEventListener('click', function(event) {
        const modalOverlay = document.getElementById('modal-overlay');
        if (event.target === modalOverlay) {
            closeModal();
        }
    });